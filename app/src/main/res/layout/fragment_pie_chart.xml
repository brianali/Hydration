<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    tools:context="itp341.liang.briana.finalproject.PieChartFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/pie_chart_label"
        android:textAlignment="center"
        style="@style/Base.TextAppearance.AppCompat.Medium"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/total_pie_chart"
        android:layout_marginTop="@dimen/image_size"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/fluid_list_view"/>
</FrameLayout>
